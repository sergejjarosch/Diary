@model DiaryEntry


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 m-xl-auto">
            <div class="card shadow">
                <div class="card-header bg-light ">
                    <h2>Create Diary Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!--  <div asp-validation-summary="All" class="text-danger"></div>  -->
                        
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title" />
                            <span asp-validation-for="Title" class="text-danger"></span>    <!-- Validation Text-->
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <input asp-for="Content" row="5" class="form-control" placeholder="Enter what you did that day" />
                            <span asp-validation-for="Content" class="text-danger"></span>  <!-- Validation Text-->
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="CreatedDate" class="form-label">Date</label>
                            <input asp-for="CreatedDate" class="form-control" type="date" value="@Model.CreatedDate.ToString("yyyy-MM-dd")"/>
                            <!-- Hier wird das Datum korrekt im ISO-Format (yyyy-MM-dd) übergeben,
                                das von HTML für Eingabefelder vom Typ date erwartet wird. 
                                Damit funktioniert die Vorausfüllung des aktuellen Datums. -->
                            
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>  <!-- Validation Text-->
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-outline-primary">Create</button>
                            <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-outline-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
                           